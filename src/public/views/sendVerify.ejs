<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- font google -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- css -->
        <link rel="stylesheet" href="../css/css-sendVerify/style.css" />
        <link rel="stylesheet" href="../css/css-sendVerify/responsive.css" />

        <!-- alert -->
        <link rel="stylesheet" href="../css/css-alert/style.css" />

        <title>Gửi xác nhận đến email</title>
    </head>
    <body>
        <div class="container">
            <div class="content">
                <div class="orange">
                    <img src="../images/Saly-3.png" alt="" class="image__bg" />
                </div>
                <div class="white">
                    <img src="../images/Saly-2.png" alt="" class="image__bg" />
                </div>
                <div class="form__container">
                    <div class="welcome">
                        <p>Chào mừng bạn đến với Let's Food</p>
                        <h2>Xác thực</h2>
                    </div>

                    <form action="" class="form__content">
                        <p class="message__send">
                            Đã gửi mã xác thực đến email <span>hongducyb123@gmail.com</span>
                        </p>

                        <button class="btn">Xác thực</button>
                    </form>

                </div>
            </div>
        </div>

        <!-- alert -->
        <div class="alert">
            <!-- success -->
            <div class="alert-success alert__container">
                <div class="alert-success__icon alert__icon"><i class="fas fa-check-circle"></i></div>
                <div class="alert-success__content alert__content">
                    <p class="alert-success__desc alert__desc">Đăng ký thành công</p>
                </div>
                <div class="alert__icon alert__icon-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <!-- info -->
            <div class="alert-info alert__container">
                <div class="alert-info__icon alert__icon"><i class="fas fa-info-circle"></i></div>
                <div class="alert-info__content alert__content">
                    <p class="alert-info__desc alert__desc">Đăng ký thành công</p>
                </div>
                <div class="alert__icon alert__icon-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <!-- warning -->
            <div class="alert-warn alert__container">
                <div class="alert-warn__icon alert__icon"><i class="fas fa-exclamation-triangle"></i></div>
                <div class="alert-warn__content alert__content">
                    <p class="alert-warn__desc alert__desc">Đăng ký thành công</p>
                </div>
                <div class="alert__icon alert__icon-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <!-- error -->
            <div class="alert-error alert__container">
                <div class="alert-error__icon alert__icon"><i class="fas fa-exclamation-circle"></i></div>
                <div class="alert-error__content alert__content">
                    <p class="alert-error__desc alert__desc">Đăng ký thành công</p>
                </div>
                <div class="alert__icon alert__icon-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
        </div>

        <!-- javascript -->
        <script src="https://kit.fontawesome.com/7dd86c08e8.js" crossorigin="anonymous"></script>
    </body>
</html>